<%= form_for(@topic) do |f| %>
  <div class="topcic-title-box">
    <%= f.error_messages! %>
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div class="topcic-content-box">
    <%= f.label :内容 %>
    <%= f.text_area :content %>
  </div>
  <div class="topcic-submit-box">
    <%= f.submit '投稿する' %>
  </div>
<% end %>
