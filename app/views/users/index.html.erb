<p>ユーザー</p>
<% @users.each do |user| %>
  <p><%= profile_img(user) %><p>
  <p><%= user.email %></p>
  <% if user.id != current_user.id %>
    <p><%= link_to user.name, user %><p>
    <p><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
    <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
  <% end %>
  <p><%= link_to user.name, user_path(user) %></p>
<% end %>
