<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
    <div class="comments">
    <%= comment.user.name %>さんがコメントしました。</p>
    <%= comment.content %></p>
    <% if current_user.id == comment.user.id %>
      <%= link_to '', edit_topic_comment_path(topic, comment), class: "fa fa-pencil-square-o fa-lg" %>
      <%= link_to '', topic_comment_path(topic, comment),method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
    <% end %>
    </div>
  <% end %>
<% end %>
