<%= form_for([topic,comment], remote: true) do |f| %>
  <%= f.error_messages! %>
  <%= f.hidden_field :topic_id %>
  <div class="field">
    <%= f.text_area :content, placeholder: "コメントを入力して下さい", class: "form-control" %>
  </div>
  <div class="">
    <%= f.submit class: "btn button-large" %>
  </div>
<% end %>
